@{
}
@model ProductTableDto

<form asp-controller="Product" asp-action="UpdateProductMethod" method="POST" enctype="multipart/form-data">

    <div class="formContainer">

        <img class="imgPrvt" src="/image/system-update.png" style="margin-bottom: 23px;">

        <div style="display: flex;">

            <input class="inputForm" value="@Model.ProductName" name="ProductName" placeholder="Ürün İsmi" required>

            <input class="inputForm" value="@Model.Price" name="Price" placeholder="Fiyat" required>

        </div>

        <select class="inputFormV2" value="@Model.CategoryId" name="CategoryId" placeholder="Description" required>

            @foreach (var item in (List<CategoryTableDto>)ViewData["categorysForProductUpd"])
            {
                <option value="@item.Id">@item.CategoryName</option>

            }

        </select>

        <input type="file" name="photo" id="photo" value="@Model.ImagePath" class="inputFormFile" accept="image/*" />
        <p style="color:red;font-size:0.7em;max-width:199px">Not: Seçim yapmamanız durumunda mevcut görsel kullanılmaya devam edecektir.</p>




        <button class="buttonPrvt" type="submit" style="margin-bottom: 25px;"> Update Product </button>

    </div>
    <input style="display:none" name="Id" value="@Model.Id" />

    <input style="display:none" name="CreatedDate" value="@Model.CreatedDate" />

    <input style="display:none" name="CreatorUserId" value="@Model.CreatorUserId" />

    <input style="display:none" name="IsDeleted" value="@Model.IsDeleted" />
</form>